<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="me.stravinskii.eldespacho.activities.RegistroActivity">

    <ScrollView android:id="@+id/register_form" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:id="@+id/register_form_form" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:minWidth="250dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/eldespacho_img"
                android:src="@drawable/eldespacho_logo"
                android:layout_gravity="center_horizontal|top" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/register_name"
                android:layout_centerHorizontal="true"
                android:hint="Nombre"
                android:layout_margin="10dp"
                android:minWidth="250dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/register_phone"
                android:hint="Teléfono"
                android:layout_margin="10dp"
                android:minWidth="250dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/register_email"
                android:layout_centerHorizontal="true"
                android:hint="Email"
                android:layout_margin="10dp"
                android:minWidth="250dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/register_password"
                android:hint="Password"
                android:layout_alignBaseline="@+id/register_pswdconfirm"
                android:layout_alignBottom="@+id/register_pswdconfirm"
                android:layout_alignLeft="@+id/register_name"
                android:layout_alignStart="@+id/register_name"
                android:layout_margin="10dp"
                android:minWidth="250dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/register_pswdconfirm"
                android:hint="Confirmación Password"
                android:layout_above="@+id/button"
                android:layout_alignLeft="@+id/register_password"
                android:layout_alignStart="@+id/register_password"
                android:layout_margin="10dp"
                android:minWidth="250dp" />

            <Button
                android:onClick="registrar"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Registrarse"
                android:id="@+id/button"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
